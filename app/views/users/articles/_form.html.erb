<%= form_with(model: article, url: article_path, local: true) do |f| %>

  <%= render 'shared/error_messages', resource: article %>

  <%= f.label :title, class: "control-label" %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :content, class: "control-label" %>
  <%= f.text_area :content, class: "form-control" %>

  <%= f.label :image, class: "control-label" %><br/>
  <% if article.image? %>
    <%= image_tag(article.image.url(:thumb)) %><br/>
  <% end %>

  <%= f.file_field :image %><br/>
  <%= f.hidden_field :image_cache %>

  <div class="actions">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>

<% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "戻る", :back, class: "btn btn-secondary" %>
  </div>
