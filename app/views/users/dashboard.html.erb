<%# app/views/users/dashboad.html.erb %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Dash Boards</h1>
    <div class="text-center mb-3">
      <% if user_signed_in? %>
        <p class="greeting-text">Hello, <%= current_user.name %>!</p>
      <% end %>
    </div>
  </div>
  <div class="d-flex flex-column align-items-center">
    <% if user_signed_in? %>
      <%= link_to "編集", edit_user_registration_path, class: "btn btn-primary btn-lg my-2 custom-form", role: "button" %>
      <%= button_to "ログアウト", destroy_user_session_path, method: :delete, form: { class: "custom-form" }, class: "btn btn-warning btn-lg my-2 w-100" %>

    <% else %>
      <%= link_to "サインアップ", new_user_registration_path, class: "btn btn-primary btn-lg my-2 custom-form", role: "button" %>
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-success btn-lg my-2 custom-form", role: "button" %>
    <% end %>
  </div>
</div>
